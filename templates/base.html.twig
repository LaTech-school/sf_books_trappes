<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>

        <header>
            <nav>
                <a href="{{ path('homepage') }}"> <i class="ri-home-2-line"></i> Accueil</a>
                <a href="{{ path('book:index') }}"> <i class="ri-book-line"></i> Nos livres</a>
                <a href="{{ path('contact') }}"> <i class="ri-at-line"></i> Contactez-Nous</a>
                <a href="{{ path('faq') }}">F.A.Q.</a>
            </nav>
        </header>
        
        
        <main>
            <div class="container">
                {% block body %}{% endblock %}
            </div>
        </main>
        

    </body>
</html>
